{
    "compilerOptions": {
        "target": "es3",
        "lib": [
            "dom",
            "dom.iterable",
            "es5",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "esnext"
        ],
        "module": "esnext",
        "importsNotUsedAsValues": "remove",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "declaration": true,
        "pretty": true,
        "strict": true,
        "rootDir": "src",
        "outDir": "build/out",
        "paths": {
            "tsk": ["src/lib/compiler"]
        },
        "baseUrl": "./"
    },
    "include": ["./src"]
}