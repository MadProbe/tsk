{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable"],
        "module": "esnext",
        "importsNotUsedAsValues": "remove",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "./build/decls",
        "pretty": true,
        "strict": true,
        "rootDir": "src",
        "outDir": "./build",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "composite": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "incremental": true
    },
    "include": ["./src/lib"]
}